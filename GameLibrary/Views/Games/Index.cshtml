@model IEnumerable<GameLibrary.Models.Game>

@{
    ViewData["Title"] = "Games List";
}

<h2>Games List</h2>

<p>
    <a asp-action="Create">Add New Game</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="title" asp-route-ascending="@(ViewData["CurrentSortOrder"]?.ToString() == "title" && (bool)ViewData["IsAscending"] == true ? false : true)">Title</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="releaseDate" asp-route-ascending="@(ViewData["CurrentSortOrder"]?.ToString() == "releaseDate" && (bool)ViewData["IsAscending"] == true ? false : true)">Release Date</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="genre" asp-route-ascending="@(ViewData["CurrentSortOrder"]?.ToString() == "genre" && (bool)ViewData["IsAscending"] == true ? false : true)">Genre</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.ReleaseDate.ToShortDateString()</td>
                <td>@game.Genre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@game.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@game.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@game.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
